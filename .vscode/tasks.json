{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/backend/TennisStats.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile",
            "group": "build"
        },
        {
            "label": "watch-backend",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/backend/TennisStats.API/TennisStats.API.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true
        },
        {
            "label": "install-frontend",
            "type": "shell",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/src/frontend/tennis-stats-app"
            },
            "problemMatcher": []
        }
    ]
}
